<div class="row">
    <div class="col-md-12">
        <h2>Items</h2>
        <hr />
        <a href="/items/add" class="btn btn-success pull-right">Add Item</a>
        <div class="table-responsive">
            <table class="table">
                <thead>
                    <tr>
                        <th>Item ID</th>
                        <th>Title</th>
                        <th>Item Date</th>
                        <th>Price</th>
                        <th>Category</th>
                        <th>Published</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    {{#each items}}
                    <tr>
                        <td>{{this.id}}</td>
                        <td>{{this.title}}</td>
                        <td>{{this.itemDate}}</td>
                        <td>{{this.price}}</td>
                        <td><a href="/items?category={{this.category}}">{{this.category}}</a></td>
                        <td>{{#if this.published}}Yes{{else}}No{{/if}}</td>
                        <td>
                            <a href="/items/delete/id{{this.id}}" class="btn btn-danger">remove</a>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
        {{#unless items.length}}
        <div class="col-md-12 text-center">
            <strong>{{message}}</strong>
        </div>
        {{/unless}}
    </div>
</div>
